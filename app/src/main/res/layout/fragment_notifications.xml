<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical"
    tools:context="example.caift.sms.mysecure.fragment.NotificationsFragment">


    <Button
        android:id="@+id/emergency_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/emer_btn"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/police_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/police_btn"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/emergency_btn"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/women_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/women_btn"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/police_btn"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/police_btn"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/police_btn"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/child_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/child_btn"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/women_btn"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/women_btn"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/women_btn"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/traffic_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/traffic_btn"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/child_btn"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/child_btn"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/child_btn"
        app:layout_constraintHorizontal_bias="0.0" />


</android.support.constraint.ConstraintLayout>
